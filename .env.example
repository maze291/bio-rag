# BioRAG Environment Configuration
# Copy this file to .env and fill in your values

# OpenAI API Configuration (optional - for GPT-4 support)
OPENAI_API_KEY=your_openai_api_key_here

# Tesseract OCR Configuration (optional - for PDF OCR)
TESSDATA_PREFIX=/usr/share/tesseract-ocr/4.00/tessdata/

# Application Settings
BIORAG_MAX_DOCS=50000
BIORAG_CHUNK_SIZE=1000
BIORAG_CHUNK_OVERLAP=200

# Vector Database Settings
BIORAG_DB_PATH=./vector_db
BIORAG_EMBEDDING_MODEL=scibert

# LLM Settings
BIORAG_LLM_MODEL=ollama  # or "openai"
BIORAG_LLM_TEMPERATURE=0

# Logging
BIORAG_LOG_LEVEL=INFO

# Performance Settings
BIORAG_ENABLE_OCR=true
BIORAG_USE_GPU=auto  # auto, true, false